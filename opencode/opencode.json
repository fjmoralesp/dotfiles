{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "model": "github-copilot/claude-sonnet-4.5",
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    }
  },
  "keybinds": {
    "editor_open": "ctrl+e",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  }
}
