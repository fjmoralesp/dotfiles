{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "model": "github-copilot/claude-sonnet-4",
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    }
  },
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  }
}
